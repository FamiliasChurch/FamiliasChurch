{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "skipLibCheck": true,         // ESSENCIAL: Ignora erros em pastas node_modules
    "rootDir": "src",
    "outDir": "lib",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],    // Garante que apenas a pasta src das functions Ã© compilada
  "exclude": ["node_modules", "../node_modules"] // Exclui explicitamente o node_modules do frontend
}